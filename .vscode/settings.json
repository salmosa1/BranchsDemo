{
    "CRS.ObjectNamePrefix": "",
    "CRS.ObjectNameSuffix": " PKCU",
    "CRS.AlSubFolderName": "src",
    "CRS.OnSaveAlFileAction": "Reorganize",
    "CRS.ExtensionObjectNamePattern": "<Prefix><BaseNameShort><Suffix>",
    "CRS.FileNamePatternExtensions": "<ObjectNameShort>.<ObjectTypeShortPascalCase>.<ObjectId>.al",
    "CRS.FileNamePattern": "<ObjectNameShort>.<ObjectTypeShortPascalCase>.<ObjectId>.al",
    "CRS.FileNamePatternPageCustomizations": "<ObjectNameShort>.<ObjectTypeShortPascalCase>.<ObjectId>.al",
    "files.defaultLanguage": "al",
    "al.enableCodeAnalysis": true,
    "al.codeAnalyzers": [
        "${CodeCop}",
        "${PerTenantExtensionCop}",
        "${UICop}"
    ],
    "al.ruleSetPath": "./.vscode/ruleSet.json",
    "al.enableCodeActions": true,
    
    "editor.codeActionsOnSave": {
        "source.fixAll.al": true
    },
    "alOutline.codeActionsOnSave": [
        "SortPermissions",
        "SortProperties",
        "SortProcedures",
        "SortReportColumns",
        "SortTableFields",
        "SortVariables"
    ]
}